mixin credit(type, key)
  - const p = people[key];
  .credit
    div
      p
        strong #{type}:&nbsp;
      p #{p.name}
    div.avatar
      - const image = p.image || `${assets.$}/images/www/one.svg`;
      if p.url
        a(href=p.url, target="_blank" title=`${p.name} @ ${p.url}` data-id=`team-${key}`)
          img.avatar(src=image alt=p.name)
      else
        img.avatar(src=image alt=p.name title=p.name)
      if p.url
        img.link(src=`${assets.$}/images/www/github-icon.svg`)

.banner
  .banner-content
    h1.banner-subtitle
    h2.banner-title #{page.title}
    p Sankalan won't be possible without its passionate team.
.content
  .section(style="color:#fff;background-color: rgba(0,0,0,0.5)")
    h2 The Panel
    .credits
