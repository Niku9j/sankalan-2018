- const email = 'sankalan@ducs.in'

mixin contact({ title, email, phone })
  .module
    .contact.vc
      if email
        a.button(href=`mailto:${email}`, data-id=`contact-${email}`) #{email}
      if phone
        - const p = phone.replace(/\s/g, '');
        a.button(href=`tel:${p}`, data-id=`contact-${p}`) #{phone}
      em #{title}

mixin eventContact($event, $people)
  p
    strong #{$event}
  each $p in $people
    - const p = people[$p];
    p #{p.name}&nbsp;
      if p.email
        a(href=`mailto:${p.email}`) &lt;#{p.email}&gt;&nbsp;
      if p.tel
        a(href=`tel:${p.tel}`) #{p.tel}

